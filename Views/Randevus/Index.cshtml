@model IEnumerable<Web_Odev.Models.Randevu>

@{
    ViewData["Title"] = "Randevu Listesi";
}

<h1>Randevu Listesi</h1>

<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>İşlem</th>
            <th>Tarih ve Saat</th>
            <th>Çalışan</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AdSoyad</td>
                <td>@item.Islem</td>
                <td>@item.TarihSaat.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.Calisan?.Isim</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-primary">Yeni Randevu Al</a>
</div>
