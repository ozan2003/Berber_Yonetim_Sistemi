@model Web_Odev.Models.Randevu

@{
    ViewData["Title"] = "Randevu Al";
}

<h1>Randevu Al</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Ad Soyad -->
            <div class="form-group">
                <label asp-for="AdSoyad" class="control-label"></label>
                <input asp-for="AdSoyad" class="form-control" placeholder="Adınızı ve Soyadınızı Giriniz" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>

            <!-- İşlem -->
            <div class="form-group">
                <label asp-for="Islem" class="control-label"></label>
                <input asp-for="Islem" class="form-control" placeholder="Yapılacak İşlemi Giriniz" />
                <span asp-validation-for="Islem" class="text-danger"></span>
            </div>

            <!-- Tarih ve Saat -->
            <div class="form-group">
                <label asp-for="TarihSaat" class="control-label"></label>
                <input asp-for="TarihSaat" class="form-control" type="datetime-local" />
                <span asp-validation-for="TarihSaat" class="text-danger"></span>
            </div>

            <!-- Çalışan Seçimi -->
            <div class="form-group">
                <label for="CalisanId" class="control-label">Çalışan Seçimi</label>
                <select asp-for="CalisanId" asp-items="ViewBag.Calisanlar" class="form-control"></select>
                <span asp-validation-for="CalisanId" class="text-danger"></span>
            </div>

            <!-- Submit Butonu -->
            <div class="form-group">
                <input type="submit" value="Randevu Al" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
