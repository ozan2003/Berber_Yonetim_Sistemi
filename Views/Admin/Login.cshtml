@{
    ViewData["Title"] = "Admin Girişi";
}

<style>
    body {
        background-image: url('/images/logo.jpg'); /* Kurumsal ve ciddi bir arkaplan */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
    }

    .form-container {
        background-color: rgba(10, 10, 10, 0.9);
        padding: 30px;
        border-radius: 10px;
        width: 400px;
        margin: 100px auto;
        text-align: center;
    }

    h2 {
        color: #ff4500; /* Canlı renkler */
    }
</style>

<div class="form-container">
    <h2>Admin Paneli Girişi</h2>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="username">E-posta</label>
            <input type="email" class="form-control" name="username" placeholder="E-postanızı giriniz" required />
        </div>
        <div class="form-group">
            <label for="password">Şifre</label>
            <input type="password" class="form-control" name="password" placeholder="Şifrenizi giriniz" required />
        </div>
        <button type="submit" class="btn btn-danger btn-block mt-3">Giriş Yap</button>
    </form>
</div>
