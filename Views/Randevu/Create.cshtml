@model Web_Odev.Models.Randevu

<h1>Yeni Randevu Al</h1>

<form asp-action="Create" method="post">
    <div>
        <label>Tarih ve Saat:</label>
        <input type="datetime-local" asp-for="TarihSaat" class="form-control" />
    </div>
    <div>
        <label>İşlem:</label>
        <select asp-for="Islem.ID" class="form-control">
            <option value="">-- İşlem Seçin --</option>
            @foreach (var islem in ViewBag.Islemler)
            {
                <option value="@islem.ID">@islem.Ad</option>
            }
        </select>
    </div>
    <div>
        <label>Çalışan:</label>
        <select asp-for="Calisan.ID" class="form-control">
            <option value="">-- Çalışan Seçin --</option>
            @foreach (var calisan in ViewBag.Calisanlar)
            {
                <option value="@calisan.ID">@calisan.Isim</option>
            }
        </select>
    </div>
    <div>
        <label>Kullanıcı:</label>
        <select asp-for="Kullanici.ID" class="form-control">
            <option value="">-- Kullanıcı Seçin --</option>
            @foreach (var kullanici in ViewBag.Kullanicilar)
            {
                <option value="@kullanici.ID">@kullanici.Isim</option>
            }
        </select>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Randevu Al</button>
    </div>
</form>
