@model Web_Odev.Models.Kullanici

<div class="container mt-5">
    <h2>Kayıt Ol</h2>
    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Kullanıcı Adı -->
        <div class="form-group">
            <label asp-for="Isim" class="control-label"></label>
            <input type="text" class="form-control" asp-for="Isim" />
            <span asp-validation-for="Isim" class="text-danger"></span>
        </div>

        <!-- E-posta -->
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input type="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Şifre -->
        <div class="form-group">
            <label asp-for="Şifre" class="control-label"></label>
            <input type="password" class="form-control" asp-for="Şifre" />
            <span asp-validation-for="Şifre" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Kayıt Ol</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

