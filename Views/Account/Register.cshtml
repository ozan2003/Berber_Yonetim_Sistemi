@model Web_Odev.Models.Kullanici

@{
    ViewData["Title"] = "Kayıt Ol";
}

<style>
    body {
        background-image: url('/images/logo.jpg'); /* Yumuşak, pastel arkaplan */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-container {
        background-color: rgba(0, 0, 0, 0.8);
        padding: 30px;
        border-radius: 10px;
        width: 400px;
        margin: 100px auto;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
    }
</style>

<div class="form-container">
    <h2 class="text-center">Kayıt Ol</h2>
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label for="KullaniciAdi">Kullanıcı Adı</label>
            <input type="text" class="form-control" asp-for="Isim" required />
        </div>
        <div class="form-group">
            <label for="Email">E-posta</label>
            <input type="email" class="form-control" asp-for="Email" required />
        </div>
        <div class="form-group">
            <label for="Sifre">Şifre</label>
            <input type="password" class="form-control" asp-for="Şifre" required />
        </div>
        <button type="submit" class="btn btn-success btn-block mt-3">Kayıt Ol</button>
    </form>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

