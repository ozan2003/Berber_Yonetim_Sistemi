@{
    ViewData["Title"] = "Kullanıcı Girişi";
}

<style>
    body {
        background-image: url('/images/logo.jpg'); /* Berber temalı arkaplan */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
    }

    .form-container {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 30px;
        border-radius: 10px;
        width: 400px;
        margin: 100px auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
    }
</style>

<div class="form-container">
    <h2 class="text-center">Kullanıcı Girişi</h2>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="email">E-posta</label>
            <input type="email" class="form-control" name="email" placeholder="E-postanızı giriniz" required />
        </div>
        <div class="form-group">
            <label for="sifre">Şifre</label>
            <input type="password" class="form-control" name="sifre" placeholder="Şifrenizi giriniz" required />
        </div>
        <button type="submit" class="btn btn-info btn-block mt-3">Giriş Yap</button>
    </form>
</div>
