@{
    ViewData["Title"] = "Berber Salonu";
}

<!-- Sayfa Stili -->
<style>
    /* Arka Plan Görseli */
    body {
        background-image: url('/images/logo.jpg'); /* Görselin yolu */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff; /* Yazı rengi beyaz */
        font-family: Arial, sans-serif;
    }

    /* Ana Kutucuk */
    .container-custom {
        background-color: rgba(0, 0, 0, 0.7); /* Siyah hafif opak arka plan */
        padding: 30px;
        border-radius: 10px;
        margin-top: 50px;
    }

    /* Butonlar */
    .btn-custom {
        margin: 10px;
        padding: 10px 20px;
        font-size: 18px;
        color: #fff;
        text-decoration: none;
        display: inline-block;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary-custom {
        background-color: #007bff;
    }

    .btn-secondary-custom {
        background-color: #6c756d;
    }

    .btn-success-custom {
        background-color: #28a735;
    }

    .btn-danger-custom {
        background-color: #dc3545;
    }

    .btn-dark-custom {
        background-color: #343a40;
    }

    /* Kartlar */
    .card {
        background-color: #222;
        padding: 20px;
        margin: 15px 0;
        border-radius: 5px;
    }

        .card h3 {
            margin-bottom: 10px;
            color: #f0ad4e; /* Altın rengi başlık */
        }
</style>

<!-- İçerik -->
<div class="text-center container-custom">
    <h1>Berber Salonumuza Hoşgeldiniz!</h1>

    @if (User.IsInRole("Admin"))
    {
        <a href="/Admin/Dashboard" class="btn-custom btn-danger-custom">Admin Paneli</a>
        <form asp-action="Logout" asp-controller="Account" method="post" style="display:inline;">
            <button type="submit" class="btn-custom btn-dark-custom">Çıkış Yap</button>
        </form>
    }
    else if (User.Identity.IsAuthenticated)
    {
        <a href="/Randevus/Create" class="btn-custom btn-success-custom">Randevu Al</a>
        <form asp-action="Logout" asp-controller="Account" method="post" style="display:inline;">
            <button type="submit" class="btn-custom btn-dark-custom">Çıkış Yap</button>
        </form>
    }
    else
    {
        <a href="/Admin/Login" class="btn-custom btn-primary-custom">Admin Girişi</a>
        <a href="/Account/Login" class="btn-custom btn-secondary-custom">Kullanıcı Girişi</a>
        <a href="/Account/Register" class="btn-custom btn-success-custom">Kayıt Ol</a>
    }
</div>

<!-- Bilgilendirme Kartları -->
<div class="container-custom" style="margin-top: 30px;">
    <div class="card">
        <h3>Çalışma Saatleri</h3>
        <p>Pazartesi - Cumartesi: 09:00 - 20:00</p>
    </div>
    <div class="card">
        <h3>Hizmetlerimiz</h3>
        <p>Saç Kesimi, Sakal Tıraşı, Saç Boyama, Cilt Bakımı, Keratin Bakım, Kaş ve Bıyık Şekillendirme, Saç Mezoterapisi, Saç Dökülmesi Tedavisi, Lazer Epilasyon</p>
    </div>
    <div class="card">
        <h3>İletişim</h3>
        <p>Telefon: +90 123 456 7890 <br> Adres: İstanbul, Türkiye</p>
    </div>
</div>
