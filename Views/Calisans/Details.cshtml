@model Web_Odev.Models.Calisan

<h1>Çalışan Detayları</h1>

<div>
    <h4>Çalışan Adı: @Model.Isim</h4>
    <hr />
    <dl class="row">
        <!-- Müsaitlik Saatleri -->
        <dt class="col-sm-3">Müsaitlik Saatleri</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(ViewBag.MusaitlikSaatleri))
            {
                <p>@ViewBag.MusaitlikSaatleri</p>
            }
            else
            {
                <p>Müsaitlik saatleri bulunmuyor.</p>
            }
        </dd>

        <!-- Uzmanlık Alanları -->
        <dt class="col-sm-3">Uzmanlık Alanları</dt>
        <dd class="col-sm-9">
            @if (ViewBag.UzmanlikAlanlari != null && (ViewBag.UzmanlikAlanlari as List<string>).Any())
            {
                <ul>
                    @foreach (var uzmanlik in ViewBag.UzmanlikAlanlari as List<string>)
                    {
                        <li>@uzmanlik</li>
                    }
                </ul>
            }
            else
            {
                <p>Uzmanlık alanı bulunmuyor.</p>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Çalışan Listesine Dön</a>
</div>
