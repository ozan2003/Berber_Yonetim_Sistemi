@model Web_Odev.Models.Calisan

<h1>Çalışan Detayları</h1>
<div>
    <h4>Çalışan Adı: @Model.Isim</h4>
    <hr />
    <dl class="row">
        <!-- Müsaitlik Saatleri -->
        <dt class="col-sm-3">Müsaitlik Saatleri</dt>
        <dd class="col-sm-9">
            @ViewBag.MusaitlikSaatleri
        </dd>

        <!-- Uzmanlık Alanları ve Süreleri -->
        <dt class="col-sm-3">Uzmanlık Alanları ve Süreleri</dt>
        <dd class="col-sm-9">
            @{
                var uzmanlikAlanlari = ViewBag.UzmanlikAlanlari as List<string>;
                var uzmanlikSureleri = ViewBag.UzmanlikSureleri as List<string>;
            }

            @if (uzmanlikAlanlari != null && uzmanlikSureleri != null && uzmanlikAlanlari.Count == uzmanlikSureleri.Count)
            {
                <ul>
                    @for (int i = 0; i < uzmanlikAlanlari.Count; i++)
                    {
                        <li>@uzmanlikAlanlari[i]: @uzmanlikSureleri[i] dakika</li>
                    }
                </ul>
            }
            else
            {
                <p>Uzmanlık alanı veya süre bilgisi bulunmuyor.</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Çalışan Listesine Dön</a>
</div>
